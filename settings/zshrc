# Alias
alias 42filechecker="sh ~/42FileChecker/42FileChecker.sh"
alias sublime='open -a "sublime Text"'
alias norm="python <(curl -s https://raw.githubusercontent.com/AnActualBridge/pynorm/master/pynorm.py)"
alias PlugInstall="curl -fLo ~/.vim/autoload/plug.vim --create-dirs \
	    https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim"
alias FontInstall="	git clone https://github.com/powerline/fonts.git --depth=1
					cd fonts
					./install.sh
					cd ..
					rm -rf fonts"

# Color Scheme
blue=%F{39}
purple=%F{98}
green=%F{120}
reset=%F{default}

# Terminal Prompt
PS1=$'\n' # Newline
PS1+="$blue%n" # Username
PS1+="$reset @ " # @
PS1+="$purple%m" # Hostname
PS1+="$reset in " # in
PS1+="$green./%1d" # working directory (short)
PS1+="$reset"$'\n'"â˜¯ " # Newline & Prompt
export PS1;
